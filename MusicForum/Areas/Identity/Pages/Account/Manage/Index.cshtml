@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h1 class="home-header">@ViewData["Title"]</h1>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="discussion-container">
    <div class="discussion-row">
        <!-- Profile Picture Section -->
        <section class="comments-section" style="text-align: center;">
            <div style="flex: 0 0 auto; margin-right: 20px;">
                <img src="https://via.placeholder.com/200" alt="Profile Picture" class="profile-picture" />
                <button class="create-button" style="margin-top: 10px;">Change Picture</button>
            </div>
        </section>

        <!-- Profile Form Section -->
        <section class="comments-section">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Nickname" class="form-control" />
                    <label asp-for="Input.Nickname" class="form-label">Nickname</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.FavouriteAlbum" class="form-control" placeholder="Tell us your favourite album." />
                    <label asp-for="Input.FavouriteAlbum" class="form-label">Favourite Album</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Location" class="form-control" placeholder="Where do you live?" />
                    <label asp-for="Input.Location" class="form-label">Location</label>
                </div>
                <button id="update-profile-button" type="submit" class="create-button">Save</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
